def biggerIsGreater(w):
    w = list(w)
    n = len(w)
    
    # Step 1: find pivot
    i = n - 2
    while i >= 0 and w[i] >= w[i + 1]:
        i -= 1
    
    if i == -1:
        return "no answer"
    
    # Step 2: find rightmost successor to pivot
    j = n - 1
    while w[j] <= w[i]:
        j -= 1
    
    # Step 3: swap pivot and successor
    w[i], w[j] = w[j], w[i]
    
    # Step 4: reverse the suffix
    w = w[:i+1] + w[i+1:][::-1]
    
    return ''.join(w)
