def deleteNode(llist, position):

    if position == 0:
        return llist.next
    
    current = llist
    index = 0
    
    
    while current is not None and index < position - 1:
        current = current.next
        index += 1
    
    if current is not None and current.next is not None:
        current.next = current.next.next
    
    return llist
