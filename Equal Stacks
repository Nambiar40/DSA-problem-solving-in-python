def equalStacks(h1, h2, h3):
      
    h1 = h1[::-1]
    h2 = h2[::-1]
    h3 = h3[::-1]
    
    sum1, sum2, sum3 = sum(h1), sum(h2), sum(h3)
    
    while not (sum1 == sum2 == sum3):
        # remove from the tallest stack
        if sum1 >= sum2 and sum1 >= sum3:
            sum1 -= h1.pop()
        elif sum2 >= sum1 and sum2 >= sum3:
            sum2 -= h2.pop()
        else:
            sum3 -= h3.pop()
    
    return sum1  # all equal now
